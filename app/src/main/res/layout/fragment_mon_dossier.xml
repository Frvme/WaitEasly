<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D5E2EE"
    tools:context=".MonDossierFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#27776C"
        >

        <TextView
            android:id="@+id/dossier_user"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:background="#F5F5F5"
            android:text="John Wick"
            android:textAlignment="center"
            android:textSize="35sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="70dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="20dp"
            android:background="#F5F5F5"
            android:text="Mon dossier médical"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold|italic" />
    </RelativeLayout>


    <!--  -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="153dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="#F5F5F5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="200dp"
            android:text="Groupe sanguin : "
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dossier_grpSanguin_"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:text="O+" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:text="Allérgies : "
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/dossier_allergie"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="25dp"
            android:text="fruit à coque"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="45dp"
            android:text="Poids : "
            android:textSize="15dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/dossier_poids"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="45dp"
            android:text="95 Kg"
            android:textSize="15dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="65dp"
            android:text="Taille : "
            android:textSize="15dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/dossier_taille"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="65dp"
            android:text="185 cm"
            android:textSize="15dp"
            />


    </RelativeLayout>



</RelativeLayout>