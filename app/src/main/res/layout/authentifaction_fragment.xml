<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentOne"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/font"
    tools:context="com.example.waiteasly.Authentification">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:orientation="vertical"
    android:layout_marginRight="50dp"
    android:layout_marginLeft="50dp">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_auth"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/background_light"
        android:text="Identifiant"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginBottom="8dp"/>
    <EditText
        android:id="@+id/login"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:maxLength="20"
        android:textColor="@android:color/background_light"
        android:paddingLeft="10dp"
        android:background="@drawable/border_radius"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/background_light"
        android:text="Mot de passe"
        android:textSize="18sp"
        android:layout_marginBottom="5dp"/>
    <EditText
        android:id="@+id/pwd"
        android:singleLine="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@android:color/background_light"
        android:paddingLeft="10dp"
        android:maxLength="12"
        android:inputType="textPassword"
        android:textSize="20sp"
        android:background="@drawable/border_radius"/>
    <Button
        android:id="@+id/actionLogin"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:text="Se connecter"
        android:background="@drawable/border_btn_radius"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/background_light"
            android:text="Mot de passe oubliÃ© ?"
            android:textSize="12sp"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:textColor="@android:color/background_light"
            android:text="Pas de compte ?"
            android:textSize="12sp"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>
</LinearLayout>



</LinearLayout>

